@model WEB_SITE.Models.VuelosVM

@{
    ViewData["Title"] = "Modificar Vuelo";
    var ListaCiudadesOrigen = (List<SelectListItem>)ViewData["ListaCiudadesOrigen"];
    var ListaCiudadesDestino = (List<SelectListItem>)ViewData["ListaCiudadesDestino"];
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["ErrorModifyVuelo"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error!</strong> @TempData["ErrorModifyVuelo"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <form asp-action="Modify" asp-controller="Vuelos" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="idVuelo" class="form-control" hidden />
                <input asp-for="idFrecuenciaVuelo" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="idCiudadOrigen" class="control-label"></label>
                <select asp-for="idCiudadOrigen" asp-items="ListaCiudadesOrigen" class="form-control">
                    <option value="0">--Seleccione Ciudad Origen--</option>
                </select>
                <span asp-validation-for="idCiudadOrigen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idCiudadDestino" class="control-label"></label>
                <select asp-for="idCiudadDestino" asp-items="ListaCiudadesDestino" class="form-control">
                    <option value="0">--Seleccione Ciudad Destino--</option>
                </select>
                <span asp-validation-for="idCiudadDestino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <hr />
            <h2>Frecuencia de Vuelo</h2>
            <hr />
            <div class="form-group">
                <label asp-for="DiaSemana" class="control-label"></label><br />
                <select asp-for="DiaSemana" class="form-control">
                    <option value="0">Dia</option>
                    <option value="1">Lunes</option>
                    <option value="2">Martes</option>
                    <option value="3">Miercoles</option>
                    <option value="4">Jueves</option>
                    <option value="5">Viernes</option>
                    <option value="6">Sabado</option>
                    <option value="7">Domingo</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="HoraSalida" class="control-label"></label>
                <input asp-for="HoraSalida" class="form-control timepicker1 " placeholder="Seleccione la hora" />
            </div>
            <div class="form-group">
                <label asp-for="HoraLlegada" class="control-label"></label>
                <input asp-for="HoraLlegada" class="form-control timepicker2" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListadoVuelosAdmin">Back to List</a>
</div>
@section Scripts{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            flatpickr(".timepicker1", {
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true,
            });
            flatpickr(".timepicker2", {
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true,
            });
        });
    </script>

}
