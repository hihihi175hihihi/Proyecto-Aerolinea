@model WEB_SITE.Models.AccessRoles

@{
    ViewData["Title"] = "Modificar Acceso segun Rol";
    var roles = (List<SelectListItem>)ViewData["ListadoRoles"];
    var accesos = (List<SelectListItem>)ViewData["ListadoAccesos"];
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        @if (TempData["ErrorModifyAccesosRoles"] != null)
            {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error!</strong>  @TempData["ErrorModifyAccesosRoles"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            }
        <form asp-action="Modify">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="idAccessRoles" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="idRol" class="control-label"></label>
                <select asp-for="idRol" asp-items="roles" class="form-control"></select>
                <span asp-validation-for="idRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idAccess" class="control-label"></label>
                <select asp-for="idAccess" asp-items="accesos" class="form-control"></select>
                <span asp-validation-for="idAccess" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

