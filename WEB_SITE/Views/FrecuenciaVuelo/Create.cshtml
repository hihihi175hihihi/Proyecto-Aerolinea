@model WEB_SITE.Models.FrecuenciaVuelo

@{
    ViewData["Title"] = "Crear Frecuencia de Vuelo";
    var ListadoVuelos = (List<SelectListItem>)ViewData["ListadoVuelos"];
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        @if (TempData["ErrorCreateFrecuenciaVuelo"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error!</strong>  @TempData["ErrorCreateFrecuenciaVuelo"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <form asp-action="Create" asp-controller="FrecuenciaVuelo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idVuelo" class="control-label"></label>
                <select asp-for="idVuelo" asp-items="ListadoVuelos" class="form-control">
                    <option value="">--Seleccione un Vuelo--</option>
                </select>
                <span asp-validation-for="idVuelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaSemana" class="control-label"></label>
                <select asp-for="DiaSemana" class="form-control">
                    <option value="0">--Seleccione un dia de la Semana--</option>
                    <option value="1">Lunes</option>
                    <option value="2">Martes</option>
                    <option value="3">Miercoles</option>
                    <option value="4">Jueves</option>
                    <option value="5">Viernes</option>
                    <option value="6">Sabado</option>
                    <option value="7">Domingo</option>
                </select>
                <span asp-validation-for="DiaSemana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraSalida" class="control-label"></label>
                  <input asp-for="HoraSalida" class="form-control timepicker1 " placeholder="Seleccione la hora de Salida" />
                <span asp-validation-for="HoraSalida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraLlegada" class="control-label"></label>
                <input asp-for="HoraLlegada" class="form-control timepicker2" placeholder="Seleccione la hora de Llegada" />
                <span asp-validation-for="HoraLlegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        flatpickr(".timepicker1", {
          enableTime: true,
          noCalendar: true,
          dateFormat: "H:i",
          time_24hr: true,
        });
        flatpickr(".timepicker2", {
          enableTime: true,
          noCalendar: true,
          dateFormat: "H:i",
          time_24hr: true,
        });
      });
    </script>

}
