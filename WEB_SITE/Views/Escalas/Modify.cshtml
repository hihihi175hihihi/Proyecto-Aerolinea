@model WEB_SITE.Models.Escalas

@{
    ViewData["Title"] = "Modificar Escala";
    var ciudad = (List<SelectListItem>)ViewData["ListadoCiudad"];
    var Vuelo = (List<SelectListItem>)ViewData["ListadoVuelos"];
}

<h1>Modificar</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        @if (TempData["ErrorModifyEscalas"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error!</strong>  @TempData["ErrorModifyEscalas"].ToString()
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        <form asp-action="Modify">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="idEscala" class="form-control" hidden />
                <span asp-validation-for="idEscala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idVuelo" class="control-label"></label>
                <select asp-for="idVuelo" asp-items="Vuelo" class="form-control"></select>
                <span asp-validation-for="idVuelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idCiudadEscala" class="control-label"></label>
                <select asp-for="idCiudadEscala" asp-items="ciudad" class="form-control"></select>
                <span asp-validation-for="idCiudadEscala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuracionEscala" class="control-label"></label>
                <input asp-for="DuracionEscala" class="form-control" type="number" min="0" max="24" step="1" />
                <span asp-validation-for="DuracionEscala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuracionLlegada" class="control-label"></label>
                <input asp-for="DuracionLlegada" class="form-control" type="number" min="0" max="24" step="1" />
                <span asp-validation-for="DuracionLlegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

